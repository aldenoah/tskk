<% title "Change Your Password? | Towing Service KK" %>
<% noindex %>
<div class="container">
<h2>Change Your Password</h2>
<hr>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-group">
    <%= f.input :password, label: "New password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Change my password", class: "btn btn-danger" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
<br>