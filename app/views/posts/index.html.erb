<% title "Blog | Towing Service KK" %>
<% noindex %>

<div id="blogfeed" class="container">
<div class="row">
  <div class="col-md-8">
  <% @posts.each do |post| %>
  <div class="post">
    <h2><%= link_to post.title, post %></h2>
    <% if user_signed_in? %>
    <div id="subtext">
      <%= link_to 'EDIT', edit_post_path(post) %> | <%= link_to 'DELETE', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <% end %>
    <%= raw post.body.truncate_words(50) %>
  </div>
  <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "CALL US NOW", contact_path, class: "btn btn-lg btn-danger full-width" %>
  </div>
</div>
</div>